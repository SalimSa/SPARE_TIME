<div class="top-middle-card mt-0 text-center position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%);">
  <div class="card">
      <% if @collaboration.item.photo.attached? %>
      <%= cl_image_tag @collaboration.item.photo.key, height: 300, crop: :fill, class: "w-100" %>
      <% end %>
    <div class="card-body">
      <h2 class="mb-4">Congratulations, you can connect with your community!</h2>
      <h5>Entered</h5>
      <h4 class="mt-4"><b><%= @collaboration.item.title %></b></h4>
      <h6 class="mb-3">User <%= @collaboration.user_id%></h6>
      <h6 class="mb-4">Theme <%= @collaboration.theme_id %></h6>
      <%= link_to "My Collaborations", collaboration_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
  