<div class="container">

  <%# SEARCH BAR %>
  <div>
    <%= form_with url: themes_path, method: :get, class: "d-flex" do %>
      <div class="input-group">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a theme",
          aria_label: "Search for a theme"
        %>
        <div class="input-group-append">
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <%# END SEARCH BAR %>

<div class="create-btn">
  <%= link_to "Add a new theme", new_theme_path%>
</div>

<div class="container theme-card-container">
  <% @themes.each do |theme| %>
    <%= link_to theme_path(theme) do %>
      <div class="theme-card">
        <div class="theme-photo">
        </div>
        <div class="theme-content">
          <h3><%= theme.title.truncate(20) %></h3>
          <p><%= theme.description.truncate(70) %></p>
        </div>
      </div>
    <% end %>
  <% end %>

</div>
