<body class="body">
<div class="flex-container">


  <br>
<div class="flex-item">
  <div class="container themes-card-container">
    <% @themes.each do |theme| %>
      <%= link_to theme_path(theme) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(theme.photo.key) if theme.photo.key.present? %>)">
          <h3><%= theme.title.truncate(20) %></h3>
          <p><%= theme.description.truncate(70) %></p>
        </div>
      <% end %>
          <%= link_to unfavorite_theme_path(theme), method: :patch do %><i class="fas fa-heart"></i><% end %>

    <% end %>
  </div>
</div>

<div class="flex-container tasks">

  <div class="flex-item w-25">
    <h4 class="my-events">My events</h4>
      <div class="calendar-container">
        <%= image_tag "calendar.png", alt: "calendar", width: "100%" %>
      </div>
  </div>

  <div class="flex-item w-25">
    <h4 class="my-events">My tasks</h4>
      <div class="task-card">
        <h5>Le Wagon: <%= @incomplete_number %>/<%= @total_number %></h5>
      </div>

  </div>

  <div class="flex-item w-25">
    <h4 class="my-events">Collaborations</h4>
    <div class="task-card">
        <p>No new collaborations</p>
      </div>
  </div>

</div>
<body>
