<div class="container topic-heading">
  <h2><%= @topic.title %></h2>
  <h2><%= @topic.description %></h2>
</div>

<div class="create-btn">
  <%= link_to "Add a new item", new_topic_item_path(@topic)%>
</div>

<div class="theme-card-container">
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <div class="theme-card">
        <div class="theme-photo">
        </div>
        <div class="theme-content">
          <h3><%= item.title.truncate(25)  %></h3>
          <p><%= item.description.truncate(70) %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="back-btn">
  <%= link_to "Back", theme_path(@topic.theme)%>
</div>
